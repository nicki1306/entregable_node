<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/public/js/index.js" defer></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-800 text-gray-100">

    <div id="list-products" class="container mx-auto my-8 flex flex-wrap justify-center">
        <!-- Aquí se insertarán los productos -->
    </div>

    <form id="formProduct" class="container mx-auto my-8 p-4 bg-gray-700 rounded">
        <div class="mb-4">
            <label for="title" class="block mb-2">Título</label>
            <input type="text" name="title" id="title" class="w-full p-2 bg-gray-800 text-gray-100 rounded" required>
        </div>
        <div class="mb-4">
            <label for="description" class="block mb-2">Descripción</label>
            <input type="text" name="description" id="description" class="w-full p-2 bg-gray-800 text-gray-100 rounded" required>
        </div>
        <div class="mb-4">
            <label for="stock" class="block mb-2">Stock</label>
            <input type="number" name="stock" id="stock" class="w-full p-2 bg-gray-800 text-gray-100 rounded" required>
        </div>
        <div class="mb-4">
            <label for="thumbnail" class="block mb-2">Thumbnail</label>
            <input type="text" name="thumbnail" id="thumbnail" class="w-full p-2 bg-gray-800 text-gray-100 rounded" required>
        </div>
        <div class="mb-4">
            <label for="category" class="block mb-2">Categoría</label>
            <input type="text" name="category" id="category" class="w-full p-2 bg-gray-800 text-gray-100 rounded" required>
        </div>
        <div class="mb-4">
            <label for="price" class="block mb-2">Precio</label>
            <input type="number" name="price" id="price" class="w-full p-2 bg-gray-800 text-gray-100 rounded" required>
        </div>
        <div class="mb-4">
            <label for="code" class="block mb-2">Código</label>
            <input type="text" name="code" id="code" class="w-full p-2 bg-gray-800 text-gray-100 rounded" required>
        </div>
        <div class="mb-4">
            <label for="status" class="block mb-2">Estado</label>
            <input type="checkbox" name="status" id="status" class="mr-2"> Disponible
        </div>
        <button type="submit" class="w-full p-2 bg-green-600 text-gray-100 rounded">Agregar Producto</button>
    </form>

    <input type="number" id="id-prod" class="w-full p-2 bg-gray-800 text-gray-100 rounded mb-4" placeholder="ID del producto a eliminar">
    <button id="delete-btn" class="w-full p-2 bg-red-600 text-gray-100 rounded">Eliminar Producto por ID</button>

</body>
</html>

</body>
</html>
